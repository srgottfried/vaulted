<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vaultapp.controller.ChooseVaultDialogController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER">

    <Label fx:id="prompt" text="Choose a vault" textAlignment="CENTER"/>
    <TableView fx:id="vaultsTable" />
    <HBox>
        <Button fx:id="btnSelect" text="Select" onAction="#onBtnClick"/>
        <Button fx:id="btnAdd" text="Add new" onAction="#onBtnClick" />
        <Button fx:id="btnCancel" text="Cancel" onAction="#onBtnClick"/>
        <Button fx:id="btnDelete" text="Delete" onAction="#onDeleteClick" />
    </HBox>
</VBox>
